{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Electron: Main",
            "protocol": "inspector",
            //"program": "${workspaceRoot}/src/main.ts",
            "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron",
            "runtimeArgs": [
                //"--remote-debugging-port=9223",
                "."
            ],
            "sourceMaps": true,
            "preLaunchTask": "gulp: default",
            "outFiles": [
                "${workspaceRoot}/dist/**/*.js"
            ],
        },
        {
            "name": "Electron: Renderer",
            "type": "chrome",
            "request": "attach",
            "sourceMaps": true,
            "port": 9223,
            "webRoot": "${workspaceFolder}",
            "timeout": 30000
        }
    ],
    "compounds": [
        {
            "name": "Electron: All",
            "configurations": [
                "Electron: Main",
                "Electron: Renderer"
            ]
        }
    ]
}